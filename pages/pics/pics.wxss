.p-i-box {
  display: flex;
  flex-wrap: wrap;
  margin-right: -25rpx;
}

.box-item {
  width: 340rpx;
  height: 440rpx;
  overflow: hidden;
  margin: 0 24rpx 50rpx 0;
}

.item-img {
  display: block;
  width: 340rpx;
  height: 340rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx gray;
}

.item-add {
  text-align: center;
  background: #f5f5f5;
  color: #0bb9f1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-name {
  color: #000;
  font-size: 32rpx;
  line-height: 64rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-num {
  color: #747474;
  font-size: 28rpx;
  line-height: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-ico {
  color: #05b9ff;
  font-size: 140rpx;
}

.pics-modal-container {
  width: 600rpx;
  height: auto;
  padding: 30rpx;
  background-color: #fff;
  color: #000;
  border-radius: 18rpx;
  text-align: center;
}

.pics-modal-container .item {
  padding: 30rpx;
}

.pics-modal-container .item.delete {
  color: red;
}

.pics-modal-container button {
  background-color: #11b8f5;
  margin-top: 80rpx;
  color: #fff;
}

.pics-modal-container input {
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}